<p id="notice"><%= notice %></p>

<h1>Listing Variant Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Variant</th>
      <th>Supplier</th>
      <th>Cost</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variant_suppliers.each do |variant_supplier| %>
      <tr>
        <td><%= variant_supplier.variant_id %></td>
        <td><%= variant_supplier.supplier_id %></td>
        <td><%= variant_supplier.cost %></td>
        <td><%= variant_supplier.active %></td>
        <td><%= link_to 'Show', variant_supplier %></td>
        <td><%= link_to 'Edit', edit_variant_supplier_path(variant_supplier) %></td>
        <td><%= link_to 'Destroy', variant_supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

