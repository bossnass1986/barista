.grid-block
  .small-12.grid-content
    %section.block-list
      %header Order Cart
      %ul
        - @cart_item.each do |venue|
          %li.with-chevron
            -#= link_to venue.name.titlecase, venue

<p id="notice"><%= notice %></p>

<p>
  <strong>Order:</strong>
  <%= @cart_item.order_id %>
</p>

<p>
  <strong>:</strong>
  <%= @cart_item.menu_item %>
</p>

<p>
  <strong>Unit price:</strong>
  <%= @cart_item.unit_price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @cart_item.quantity %>
</p>

<p>
  <strong>Total price:</strong>
  <%= @cart_item.total_price %>
</p>

<%= link_to 'Edit', edit_cart_item_path(@cart_item) %> |
<%= link_to 'Back', cart_items_path %>
