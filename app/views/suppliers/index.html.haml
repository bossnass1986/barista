- title t('supplier.index.title')
- content_for :head do
  = stylesheet_link_tag 'app/products'
- @suppliers.each_with_index do |supplier, i|
  .product-list.grid-block
    .small-8.grid-content.text-center
      %h4
        =link_to supplier.name.titlecase, supplier
        %p= supplier.address
    .small-4
      = link_to supplier, title: supplier.name do
        = supplier.image_available