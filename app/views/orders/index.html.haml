- title 'My Order History'
.grid-block
  .small-12.grid-content
    - if @orders.empty?
      .grid-block{style: 'background:#fff'}
        .grid-content
          %h2.text-center You currently do not have any orders.
    - else
      .grid-block
        .grid-content
          %section.block-list
            %header Past Order Details
            %ul
              - @orders.each do |order|
                %li.with-chevron
                  = link_to "Order ##{order.id}", order
-#%h3 Orders
-#- unless @orders.length > 0
  You currently do not have any orders.
-#- @orders.each do |order|
  .order-list-item.ten
    %ul
      %li
        %label Number:
        = link_to order.number, order
      -#%li
        %label Amount:
        = number_to_currency( order.first_invoice_amount )
      %li
        %label Status:
        = order.order_status.name
      %li
        %label Completed at:
        = order.display_completed_at
  %hr/