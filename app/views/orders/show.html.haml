-#- title "Order #{@order.id}"

- content_for :head do
  = stylesheet_link_tag 'tables.css'
.nine.large-9.columns
  %h3
    Order # #{@order.number}
  .pretty_table.ten
    %table{:style => "margin: 0;"}
      %tbody
        %tr
          %td.left-align Number:
          %td
            = @order.number
        %tr
          %td.left-align Completed at:
          %td
            = @order.display_completed_at
        -#%tr
          %td.left-align Shipping Address:
          %td
            = render :partial => '/shared/compact_address', :locals => {:shopping_address => @order.ship_address} if @order.ship_address_id
        -#%tr
          %td.left-align Billing Address:
          %td
            = render :partial => '/shared/compact_address', :locals => {:shopping_address => @order.bill_address} if @order.bill_address_id
        %tr
          %td{:COLSPAN => "2"} Items
        - @order.order_items.each do |item|
          %tr
            %td.left-align{:COLSPAN => "2"}
              = item.variant.product_name


-#.grid-block
  .small-12.grid-content
    %p= "#{@order.user.name or 'Guest User'}, your ##{@order.id} is being made and will be ready at approximately #{@order.placed.strftime('%l:%M%p')}"

    %zf-accordion
      - @order_status.each do |os|
        - if @order.order_status_id == os.id
          %zf-accordion-item{:title => os.name, 'auto-open': :true}
            = os.description
        - else
          %zf-accordion-item{:title => os.name, 'auto-open': :false}
            = os.description

    -#%ul.vertical.icon-left.menu-bar
      - @order_status.each do |os|
        - if @order.order_status_id >= os.id
          %li
            %a{:href => "#"}
              %img{icon: 'circle-check', size: 'small', 'zf-iconic': '', class: 'iconic-color-success'}= os.name
        - else
          %li
            %a{:href => "#"}
              %img.iconic-color-success{icon: 'circle-x', size: 'small', 'zf-iconic': ''}= os.name