= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .mdl-grid
    .mdl-cell.mdl-cell--12-col
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, class: 'mdl-textfield__input'
        %label.mdl-textfield__label
          Email...
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Password...
  .mdl-grid
    .mdl-cell.mdl-cell--2-col
      = content_tag :label, :class => 'mdl-switch mdl-js-switch mdl-js-ripple-effect' do
        = f.check_box :remember_me, :class => 'mdl-switch__input' do
          = content_tag :span, :class => 'mdl-switch__label' do
            Remember Me?
    .mdl-cell.mdl-cell--2-col
      Forgot Password
    .mdl-cell.mdl-cell--12-col.right
      / Primary-colored raised button with ripple
      = f.submit 'Sign In', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'
      / Accent-colored flat button with ripple
      = link_to 'Join Now', new_registration_path(resource_name), class: 'mdl-button mdl-js-button mdl-js-ripple-effect'