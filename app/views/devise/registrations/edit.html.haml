- title t('devise.registrations.edit.title')
= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: 'small-12 grid-content' }) do |f|
  .mdl-grid
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :first_name, class: 'mdl-textfield__input', autofocus: true, autocomplete: 'off'
        %label.mdl-textfield__label
          First Name...
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :last_name, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Last Name...
    .mdl-cell.mdl-cell--6-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Email...
    .mdl-cell.mdl-cell--6-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.telephone_field :mobile, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Mobile...
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Password...
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :current_password, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Password Again...
    .mdl-cell.mdl-cell--12-col
      = f.submit t('devise.registrations.edit.update_button'), class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'