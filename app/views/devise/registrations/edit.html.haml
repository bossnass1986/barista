= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: 'small-12 grid-content' }) do |f|
  .mdl-grid
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :first_name, class: 'mdl-textfield__input', autofocus: true, autocomplete: 'off'
        %label.mdl-textfield__label
          First Name...
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :last_name, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Last Name...
    .mdl-cell.mdl-cell--6-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Email...
    .mdl-cell.mdl-cell--6-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.telephone_field :mobile, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Mobile...
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Password...
    .mdl-cell.mdl-cell--2-col-phone
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :current_password, class: 'mdl-textfield__input', autocomplete: 'off'
        %label.mdl-textfield__label
          Password Again...
    .mdl-cell.mdl-cell--12-col
      / Accent-colored raised button with ripple
      = f.submit 'Sign In', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'

      -#.grid-block
  -#= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: 'small-12 grid-content' }) do |f|
    = devise_error_messages!
    %section.block-list
      %header Update My Details
      %ul
        %li= f.text_field :first_name, placeholder: :first_name
        %li= f.text_field :last_name, placeholder: :last_name
        %li= f.email_field :email, placeholder: 'Email Address'
        %li= f.telephone_field :mobile, placeholder: 'Mobile Number'
      %header Security Details
      %ul
        %li= f.password_field :password, autofocus: true, autocomplete: 'off', placeholder: 'Current Password'
        %li= f.password_field :current_password, autofocus: true, autocomplete: 'off', placeholder: 'Confirm Password'
    .grid-block
      .small-12.grid-content
        = f.submit class: 'button expand large'