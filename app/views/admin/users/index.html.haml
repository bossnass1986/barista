- title 'Users'
%table.mdl-data-table.mdl-js-data-table
  %thead
    %tr
      %th.mdl-data-table__cell--non-numeric First Name
      %th.mdl-data-table__cell--non-numeric Last
      %th.mdl-data-table__cell--non-numeric Email
      %th.mdl-data-table__cell--non-numeric Orders
      %th Status
  %tbody
    - @users.each do |user|
      %tr
        %td.mdl-data-table__cell--non-numeric= link_to user.first_name, admin_user_path(user)
        %td.mdl-data-table__cell--non-numeric= user.last_name
        %td.mdl-data-table__cell--non-numeric= user.email
        %td.mdl-data-table__cell--non-numeric= user.orders.count
        %td= user.state

-#.admin_users
  %table
    %thead
      %tr.odd
        %th.column1_header "first_name"
        %th "last_name"
        %th "email"
        %th Status
    - @users.each do |user|
      %tr{:class => cycle("odd", "")}
        %td= link_to user.first_name, admin_user_path(user)
        %td= user.last_name
        %td= user.email
        %td= user.state
  -#= will_paginate @users