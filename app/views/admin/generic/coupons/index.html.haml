- title t('admin.generic.discounts.index.title')
.mdl-cell.mdl-cell--12-col
  %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp.mdl-cell--12-col
    %thead
      %tr
        %th.mdl-data-table__cell--non-numeric Code
        %th Type
        %th Starts at
        %th End at
        %th
    %tbody
      - for coupon in @coupons
        %tr
          %td.mdl-data-table__cell--non-numeric= link_to coupon.code, admin_generic_coupon_path(coupon)
          %td= coupon.type
          %td= coupon.display_start_time
          %td= coupon.display_expires_time
          %td= link_to "Edit", edit_admin_generic_coupon_path(coupon)
.mdl-cell.mdl-cell--12-col
  = link_to 'New Coupon', new_admin_generic_coupon_path, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect'