- title "Edit Variant (#{@product.name})"
.mdl-cell.mdl-cell--12-col
  = form_for @variant, :url  => admin_merchandise_product_variant_path(@product, @variant) do |form|
    = render :partial => '/admin/merchandise/variants/form', locals: { form: form }
    .generic_submit_button
      = submit_tag "Update",           |
        class: "button",               |
        id:    "create_variant_button" |