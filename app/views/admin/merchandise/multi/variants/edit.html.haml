- title @product.name
.mdl-cell.mdl-cell--12-col
  = link_to("New Variant", "javascript:void(0);", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect', "data-association" => :variants)
  = submit_tag "Update",            |
    class:  "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect",
    id:     "update_product_button"
  = link_to 'Back to Product', admin_merchandise_product_path(@product), class: 'mdl-button mdl-js-button mdl-js-ripple-effect'
  = form_for @product, url:  admin_merchandise_multi_product_variant_path(@product), html: { class: '' }  do |form|
    = render :partial => '/admin/merchandise/multi/variants/form', locals: { form: form }