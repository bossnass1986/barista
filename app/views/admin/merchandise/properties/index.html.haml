- title t('.title')
.mdl-cell.mdl-cell--12-col
  %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp.mdl-cell--12-col
    %thead
      %tr
        %th.mdl-data-table__cell--non-numeric ID
        %th.mdl-data-table__cell--non-numeric Name
        %th.mdl-data-table__cell--non-numeric Code
        %th.mdl-data-table__cell--non-numeric Visibilty
    %tbody
      - @properties.each do |property|
        %tr
          %td.mdl-data-table__cell--non-numeric= property.id
          %td.mdl-data-table__cell--non-numeric= link_to property.name, edit_admin_merchandise_property_path(property)
          %td.mdl-data-table__cell--non-numeric= property.code
          %td.mdl-data-table__cell--non-numeric= property.active ? 'Yes' : 'No'
          -#%td.mdl-data-table__cell--non-numeric
            %button.mdl-button.mdl-js-button.mdl-button--icon{:id => product.id}
              %i.material-icons more_vert
            %ul.mdl-menu.mdl-js-menu.mdl-js-ripple-effect{:for => product.id}
              %li.mdl-menu__item= link_to "Edit Variants",  edit_admin_merchandise_multi_product_variant_path(product)
              %li.mdl-menu__item= link_to "Show",  admin_merchandise_product_path(product)
  .mdl-cell.mdl-cell--12-col
    = link_to "New Property", new_admin_merchandise_property_path, :class => "button", :id => "new_property_button"