- title t('superman.merchandise.products.edit.title')
= link_to 'Add Image', edit_admin_merchandise_images_product_path(@product), :class => 'button light'
= link_to 'Variants', admin_merchandise_product_variants_path(@product), :class => 'button light'
= link_to 'Back to Product',     admin_merchandise_product_path(@product), :class => 'button'
#article-sidebar.sidebar
  = form_for @product, :url  => admin_merchandise_product_path(@product), :html => {:class => ''}  do |form|
    = render :partial => 'form', :locals => {:form => form }
    .generic_submit_button
      = submit_tag "Update",               |
        :class  => "button",               |
        :id     => "create_product_button" |