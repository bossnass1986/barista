- if @product.errors.any?
  %ul
    - @product.errors.full_messages.each do |msg|
      %li= msg
%h5.headline= t('admin.merchandise.products.form.summary')
.mdl-textfield.mdl-js-textfield
  = form.text_field :name, class: 'mdl-textfield__input'
  = form.label :name, class: 'mdl-textfield__label'
.mdl-textfield.mdl-js-textfield
  = form.text_area :set_keywords, class: 'mdl-textfield__input'
  = form.label :set_keywords, class: 'mdl-textfield__label'
.mdl-textfield.mdl-js-textfield
  = form.text_area :meta_keywords, class: 'mdl-textfield__input'
  = form.label :meta_keywords, class: 'mdl-textfield__label'
.mdl-textfield.mdl-js-textfield
  = form.text_area :meta_description, class: 'mdl-textfield__input'
  = form.label :meta_description, class: 'mdl-textfield__label'
%h5.headline= t('admin.merchandise.products.form.properties')
- @all_properties.each do |property|
  -#- if @product.id && !@product.properties.detect {|p| p.id == property.id}
  = form.fields_for :product_properties, property.product_properties.find_or_initialize_by(product_id: @product.id) do |product_property_form|
    -#= product_property_form.label '', class: 'mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect', :for => property.id
    %label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect{:for => property.id}
      = product_property_form.check_box :property_id, :class => 'mdl-checkbox__input', :id => property.id
      %span.mdl-checkbox__label= property.identifying_name
      = product_property_form.hidden_field  :property_id