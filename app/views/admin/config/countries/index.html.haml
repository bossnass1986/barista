- title t('admin.config.countries.index.title')
%p
  Select other countries below to activate them:
  \#{select_tag "countries_select", options_from_collection_for_select(@countries, "id", "name"), {prompt: 'Select to activate'}}#{link_to "Activate", [:activate, :admin, :config, @countries.first], method: :put, id: "activate-link", style: "display:none;"}
#admin_country_grid_wrapper.pretty_table
  %table
    %tr.odd
      %th.column1_header 'Name'
      %th Abbreviation
      -#%th Shipping Zone
      %th Active
      %th
    %tbody
      - for country in @active_countries
        %tr{:class => cycle("odd", "")}
          %td= link_to country.name, [:edit, :admin, :config, country]
          %td= country.abbreviation
          -#%td= country.shipping_zone.try(:name)
          %td= link_to "InActivate", [:admin, :config, country], :data => { :confirm => 'Are you sure?' }, :method => :delete
-#= will_paginate @active_countries