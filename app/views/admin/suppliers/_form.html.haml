-#= form.error_messages 'supplier'
.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
  = form.text_field :name, class: 'mdl-textfield__input'
  = form.label :name, class: 'mdl-textfield__label'
%fieldset#admin-supplier-names.span-12
  %label Name
  = form.text_field :name
  %label Email
  = form.text_field :email


%li= f.text_field :first_name, placeholder: :first_name.upcase, value: current_user.first_name
  %li= f.text_field :last_name, placeholder: :last_name, value: current_user.last_name
  %li= f.text_field :address1, placeholder: :address_1
  %li= f.text_field :address2, placeholder: :address_2
  %li= f.text_field :city, placeholder: :city
  %li= f.text_field :zip_code, placeholder: :post_code
  %li= f.select   :state_id, @states, :include_blank => true
  - if countries.size == 1
    = f.hidden_field   :country_id
  - else
    %li= f.select   :country_id, select_countries, :include_blank => true