- title t('admin.suppliers.index.title')
.mdl-cell.mdl-cell--12-col
  = link_to t('admin.suppliers.index.new_button'), new_admin_supplier_path, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect'
.mdl-cell.mdl-cell--12-col
  %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp.mdl-cell--12-col
    %thead
      %tr
        %th.mdl-data-table__cell--non-numeric= t('admin.merchandise.products.index.product')
        -#%th.mdl-data-table__cell--non-numeric= t('admin.merchandise.products.index.available')
        -#%th.mdl-data-table__cell--non-numeric= t('admin.merchandise.products.index.product_type')
        -#%th.mdl-data-table__cell--non-numeric= t('admin.merchandise.products.index.available')
        -#%th # Variants
        -#%th.mdl-data-table__cell--non-numeric Options
    %tbody
      - @suppliers.each do |supplier|
        %tr
          %td.mdl-data-table__cell--non-numeric= link_to supplier.name, edit_admin_supplier_path(supplier)
          %td.mdl-data-table__cell--non-numeric= supplier.variants.count
          -#%td.mdl-data-table__cell--non-numeric= product.product_type.name
          -#%td= product.variants.count
          -#%td.mdl-data-table__cell--non-numeric
            %button.mdl-button.mdl-js-button.mdl-button--icon{:id => product.id}
              %i.material-icons more_vert
            %ul.mdl-menu.mdl-js-menu.mdl-js-ripple-effect{:for => product.id}
              %li.mdl-menu__item= link_to "Edit Variants",  edit_admin_merchandise_multi_product_variant_path(product)
              %li.mdl-menu__item= link_to "Show",  admin_merchandise_product_path(product)
.mdl-cell.mdl-cell--12-col
  = link_to_previous_page @suppliers, 'Prev Page', :class => 'mdl-button mdl-js-button.mdl-button--raised mdl-js-ripple-effect'
  = link_to_next_page @suppliers, 'Next Page', :class => 'mdl-button mdl-js-button.mdl-button--raised mdl-js-ripple-effect'