= form_for @cart_item, :url  => shopping_cart_items_path(@cart_item), :html => { :id => 'new_cart_item', :class => 'custom' } do |f|
  = f.hidden_field :variant_id, value: items.id
  %li.mdl-list__item.mdl-list__item--three-line
    %span.mdl-list__item-primary-content
      %span= items.product.name
      %span.mdl-list__item-text-body
        = items.product.description.downcase
    %span.mdl-list__item-secondary-content
      = f.submit number_to_currency(items.price), class: 'mdl-list__item-secondary-action mdl-button mdl-js-button mdl-button--raised mdl-button--primary mdl-js-ripple-effect'
    %hr