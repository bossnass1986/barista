= form_for :session, url: session_path do |form|
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = form.email_field :email, class: 'mdl-textfield__input'
    = form.label :email, class: 'mdl-textfield__label'
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = form.password_field :password, class: 'mdl-textfield__input'
    = form.label :password, class: 'mdl-textfield__label'
  .mdl-cell--12-col
    = form.submit class: 'mdl-cell--12-col mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored'
  .mdl-cell--12-col
    = link_to t(".forgot_password"), new_password_path, class: 'mdl-cell--12-col mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect'
  .other-links
    - if Clearance.configuration.allow_sign_up?
      = link_to t(".sign_up"), sign_up_path
